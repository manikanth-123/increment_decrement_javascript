html
<!DOCTYPE html>
<html>
<head>
  <title>Count Page</title>
  <script>
    // Initialize count variable
    var count = 0;

    // Function to increment count
    function increment() {
      count++;
      document.getElementById("countValue").innerHTML = count;
    }

    // Function to decrement count (with no negative values)
    function decrement() {
      if (count > 0) {
        count--;
        document.getElementById("countValue").innerHTML = count;
      }
    }
  </script>
</head>
<body>
  <h1>Count: <span id="countValue">0</span></h1>
  <button onclick="increment()">Increment</button>
  <button onclick="decrement()">Decrement</button>
</body>
</html>
